<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Product Page</title>
        
        <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
        <style>
            body {
                background-color: rgba(200, 188, 188, 0.928);
                color: white;
                }
            nav a{
                color: yellow;
                text-decoration: none;
                font-family: 'Oswald', sans-serif;
                
                background-color: rgb(104, 104, 114);
                display: inline-block;
                list-style: none;
                padding: 10px 30px 10px 30px;
                transition: all 0.3s ease 0s;
            }
            nav a:hover {
                transition: all 0.3s ease 0s;
                color:azure;
            }
           .list {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 500px;
            height: 500px;
            margin: 0 auto;
            border: 2px solid rgb(247, 244, 244);
            list-style: none;
            margin: 0;
            padding: 0;
            text-align: left;
            flex-grow: 1;
            
            }
            .list li {
            margin-bottom: 10px;
            font-size: 20px;
            text-transform: capitalize;
            text-align: left;
            }
            #title {
                text-transform: uppercase;
            }
            .list img {
            display: block;
            max-width: 100%;
            height: auto;
            mix-blend-mode: color-burn;

            
            }
            .edit {
            display: flex;
            margin-top: 20px;
            text-align: left;
            text-transform:capitalize;
           
            }
            #ed {
                color: aliceblue;
                
                
            }

            #edit-btn, #buy-btn, #delete {
                background-color: rgba(200, 188, 188, 0.928);
                
                margin: 10px;
                color: yellow;
                font-family: 'Oswald', sans-serif;
                font-size: 20px;
                border-style: double;
                border-color: rgb(10, 13, 13);
                cursor:grab;
                transition: all 0.3s ease 0s;
            
            }


            
            @media only screen and (max-width: 600px) {
    .list {
        width: 90%;
        height: auto;
    }
    
    .list li {
        font-size: 16px;
    }
    
    nav a {
        padding: 10px 20px;
    }
}
            
        </style>
   
    </head>
<body>
    <header>
        <nav class="show">
            <a  href="/products">HOME</a>
            <a  href="/new">CREATE A NEW PRODUCT</a>
            <a  href="#">CONTACT</a>
            <a  href="#">LOGIN</a>
        </nav>
    </header>


    

    <ul class="list">
        <li id="title"><%=product.name %></li>
        <li>Description: <%=product.description %></li>
        <li>Quantity in stock: <%=product.qty%></li>
        <li> Price: $<%=product.price%></li>
        <img src="<%=product.img %>" alt="product picture">
    </ul>


<div class="edit">

   

    
    <a href="/products/<%= product._id %>/edit"><button type="button" id ="edit-btn" >EDIT</button></a>
    
    <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
         <input id="delete" type="submit" value="DELETE" id="delete-btn">
    </form>
    
    <form method="POST" action="/products/<%= product._id %>/buy">
        <% if(product.qty <= 0 ){ %>
            <button type="hidden"></button>
            <h3> OUT OF STOCK</h3>
        <% } else { %>
            <button id= "buy-btn"type="submit">BUY</button>
        <% } %>
    </form>

</div>
    

    
</body>
</html>